<%- include('header'); -%>

  <div class="container">
    <div class="main-heading" id="heading">
      <h2>
        <%= listTitle %>
      </h2>
    </div>
    <form class="new-list-item-form" action="/" method="post">
      <input type="text" name="newItem" placeholder="Type your list here" autocomplete="off" required autofocus>
      <button type="submit" name="list" value="<%= listTitle %>"><i class="fa-solid fa-circle-plus"></i></button>
    </form>
    <div class="box" id="">
      <ul>
        <% newListItems.forEach((item)=> { %>
          <form action="/delete" method="post">
            <div class="item">
              <input class="check-box" name="checkbox" value="<%= item._id %>" type="checkbox"
                onChange="this.form.submit()">
              <p class="">
                <%= item.name %>
              </p>
              <input type="hidden" name="listName" value="<%= listTitle %>"></input>
            </div>
          </form>
          <% }); %>
      </ul>

    </div>

  </div>

  <%- include('footer'); -%>    